<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="settings_buttons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/ripple_effect</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_marginTop">@dimen/vertical_margin</item>
    </style>

    <style name="normal_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin</item>
    </style>

    <style name="action_menu" parent="Theme.AppCompat.Light">
        <item name="background">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/black</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>

    </style>

    <style name="small_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin</item>
        <item name="android:textColor">@color/colorGrey</item>
    </style>

    <style name="separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/colorGrey</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">@dimen/vertical_margin</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/horizontal_margin</item>
    </style>

    <style name="mainToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/ColorPrimary</item>

    </style>

    <style name="edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/vertical_large_margin</item>
        <item name="android:padding">@dimen/appPadding</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:inputType">phone</item>
    </style>

    <style name="edit_text_material" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/vertical_large_margin</item>
        <item name="android:padding">@dimen/appPadding</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:inputType">phone</item>
    </style>
</resources>