<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.enterCode.EnterCodeFragment">

    <ImageView
        android:id="@+id/register_image"
        android:layout_margin="@dimen/horizontal_margin"
        android:layout_width="wrap_content"
        android:src="@drawable/register_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/register_text_enter_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/register_text_enter_code"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/register_image"
        android:textSize="@dimen/normal_text"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/small_text"
        android:text="@string/register_text_send"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/register_text_enter_code"/>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/edit_text_material"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_text_enter_code">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/register_input_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:hint="- - - - - -"
            android:maxLength="6" />
    </com.google.android.material.textfield.TextInputLayout>

    <!--<EditText
        android:id="@+id/register_input_code"
        app:layout_constraintStart_toStartOf="parent"
        android:maxLength="6"
        android:hint="- - - - - -"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/register_text_enter_code"
        style="@style/edit_text">
    </EditText>-->

</androidx.constraintlayout.widget.ConstraintLayout>